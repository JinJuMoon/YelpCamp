<% include ../partials/header %>

<div class="container">

  <h1 style="text-align: center;">Create a Comment to <%= campground.name %></h1>
  <div class="row">
    <div style="width: 30%; margin: 0 auto;">
      <form action="/campgrounds/<%= campground._id %>", method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="text"  placeholder="text">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="author" placeholder="author">
        </div>
        <button type="submit" class="btn btn-info btn-block">Submit</button>
      </form>
      <a href="/campgrounds/<%= campground._id %>">Go back</a>
    </div>
  </div>



</div>

<% include ../partials/footer %>
