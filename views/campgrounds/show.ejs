<% include ../partials/header %>

<div class="container">
  <div class="row">

      <div class="col-md-3">
        <p class="lead">Yelp Camp</p>
        <div class="card">
          <li class="list-group-item active">Info1</li>
          <li class="list-group-item">Info2</li>
          <li class="list-group-item">Info3</li>
        </div>
      </div>

      <div class="col-md-9">
        <div class="card">
          <img class="img-fluid" style="width: 100%;" src="<%= campground.image %>">
          <div class="card-body">
            <h4 class="float-right">$9.00/night</h4>
            <h4><%= campground.name %></h4>
            <p><%= campground.description %></p>
          </div>
          <div class="card-footer">
            <a class="btn btn-success float-right" href="/campgrounds/<%= campground._id %>/comments/new">Make new comment</a>
            <% campground.comments.forEach(function(comment){ %>
              <p><%= comment.text %> -  <%= comment.author %></p>
            <% }) %>
          </div>
        </div>
      </div>

  </div>
</div>

<% include ../partials/footer %>
